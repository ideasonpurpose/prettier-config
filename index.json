{
  "plugins": ["@prettier/plugin-php"],
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "printWidth": 120,
        "tabWidth": 2
      }
    },
    {
      "files": "*.md",
      "options": {
        "embeddedLanguageFormatting": "off"
      }
    },
    {
      "files": ["*.css", "*.scss"],
      "options": {
        "printWidth": 180,
        "tabWidth": 2
      }
    },
    {
      "files": "*.php",
      "options": {
        "printWidth": 100,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingCommaPHP": true
      }
    }
  ]
}
